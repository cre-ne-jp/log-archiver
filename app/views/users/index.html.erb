<% title(['管理', '利用者']) %>
<%= render('shared/navbar') %>
<div class="container main-container">
  <%= render('shared/flash') %>

  <div class="row">
    <div class="col-xs-12 col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3">
      <ol class="breadcrumb">
        <li><%= link_to('管理', admin_path) %></li>
        <li class="active">利用者</li>
      </ol>

      <div class="page-header">
        <h1>利用者</h1>
      </div>

      <p><%= link_to(fa_icon(:plus, text: '追加'), new_user_path, class: 'btn btn-primary') %></p>

      <table class="table table-striped">
        <thead>
          <tr>
            <th>利用者名</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= link_to(user.username, user) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
