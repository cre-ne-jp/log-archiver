<% title('利用者一覧') %>
<%= render('shared/navbar') %>
<div class="container main-container">
  <%= render('shared/flash') %>

  <div class="row">
    <div class="col-xs-12 col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3">
      <div class="page-header">
        <h1>利用者情報</h1>
      </div>

      <table class="table table-striped user-info">
        <tbody>
          <th scope="row"><%= t('activerecord.attributes.user.username') %></th>
          <td><%= @user.username %></td>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12 col-sm-6 col-md-4 col-md-offset-2 col-lg-3 col-lg-offset-3">
      <p><%= link_to(fa_icon(:pencil, text: '編集'), edit_user_path(@user), class: 'btn btn-primary btn-block') %></p>
    </div>

    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
      <p><%= link_to(fa_icon(:minus, text: '削除'), '#', class: 'btn btn-danger btn-block') %></p>
    </div>
  </div>
</div>
