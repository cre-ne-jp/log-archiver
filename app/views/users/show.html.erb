<% title('利用者情報') %>
<%= render('shared/navbar') %>
<div class="container main-container">
  <div class="row">
    <%= render('shared/admin/nav_users') %>

    <div class="col-xs-12 col-sm-9">
      <div class="main-panel">
        <div class="panel-body">
          <%= render('shared/flash') %>

          <ol class="breadcrumb">
            <li><%= link_to('管理', admin_path) %></li>
            <li><%= link_to('利用者', users_path) %></li>
            <li class="active"><%= @user.username %></li>
          </ol>

          <div class="page-header">
            <h1>利用者情報</h1>
          </div>

          <table class="table table-striped user-info">
            <tbody>
              <th scope="row"><%= t('activerecord.attributes.user.username') %></th>
              <td><%= @user.username %></td>
            </tbody>
          </table>

          <p><%= link_to('編集', edit_user_path(@user), class: 'btn btn-success') %></p>
        </div>
      </div>
    </div>
  </div>
</div>
