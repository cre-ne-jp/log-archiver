<%= form_tag(user_sessions_path) do %>
  <div class="form-group">
    <%= label_tag(:username, t('activerecord.attributes.user.username')) %>
    <%= text_field_tag(:username, nil, class: 'form-control') %>
  </div>

  <div class="form-group">
    <%= label_tag(:password, t('activerecord.attributes.user.password')) %>
    <%= password_field_tag(:password, nil, class: 'form-control') %>
  </div>

  <div class="form-group">
    <%= submit_tag(t('views.login'), class: 'btn btn-primary') %>
  </div>
<% end %>
