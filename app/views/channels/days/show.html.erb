<% date_str = @date.strftime('%F') %>
<% title([@channel.name_with_prefix, date_str]) %>
<%= render('shared/navbar') %>
<div class="container main-container">
  <%= render('shared/flash') %>

  <div class="row">
    <ol class="breadcrumb">
      <li><%= link_to('チャンネル', channels_path) %></li>
      <li><%= link_to(@channel.name_with_prefix, channel_path(identifier: @channel.identifier)) %></li>
      <li><%= link_to("#{@date.year}年", channels_months_path(identifier: @channel.identifier, year: @date.year)) %></li>
      <li><%= link_to("#{@date.month}月", channels_days_path(identifier: @channel.identifier, year: @date.year, month: @date.strftime('%m'))) %></li>
      <li class="active"><%= @date.day %>日</li>
    </ol>
  </div>

  <div class="row">
    <article class="col-xs-12 col-md-8">
      <h1><%= @channel.name_with_prefix %> <%= date_str %></h1>
      <%= render('shared/message_list', messages: @messages) %>
    </article>
    <aside class="col-xs-12 col-md-4">
      <%= month_calendar(start_date: @calendar_start_date, attribute: :date, events: @message_dates) do |date, events| %>
        <% if events.empty? %>
          <%= date.day %>
        <% else %>
          <%= link_to(date.day, channels_day_path(identifier: @channel.identifier, year: date.year, month: '%02d' % date.month, day: '%02d' % date.day)) %>
        <% end %>
      <% end %>

        <h1><%= @date.strftime('%Y-%m-%d') %> の他チャンネル</h1>
        <ul>
          <% @other_channels.each do |channel| %>
            <li><%= link_to(channel.name_with_prefix, channels_day_path(identifier: channel.identifier, year: @date.year, month: '%02d' % @date.month, day: '%02d' % @date.day)) %></li>
          <% end %>
        </ul>
    </aside>
  </div>
</div>
