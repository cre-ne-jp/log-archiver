<%= form_for(@channel) do |f| %>
  <div class="form-group">
    <%= f.label(:name) %>
    <%= f.text_field(:name, class: 'form-control', required: true) %>
  </div>

  <div class="form-group">
    <%= f.label(:identifier) %>
    <%= f.text_field(:identifier, class: 'form-control', required: true) %>
  </div>

  <div class="form-group">
    <label class="checkbox-inline">
      <%= f.check_box(:logging_enabled) %>
      <%= t('activerecord.attributes.channel.logging_enabled') %>
    </label>
  </div>

  <div class="form-group">
    <%= f.submit(t('views.save'), class: 'btn btn-primary') %>
  </div>
<% end %>
