<%= form_for(@channel) do |f| %>
  <div class="form-group">
    <label class="control-label"><%= t('activerecord.attributes.channel.name') %></label>
    <p class="form-control-static"><%= @channel.name_with_prefix %></p>
  </div>

  <div class="form-group">
    <%= f.label(:identifier) %>
    <%= f.text_field(:identifier, class: 'form-control', required: true) %>
    <p class="help-block">識別子に使用可能な文字は半角英数字（小文字のみ）、ハイフン（<code>-</code>）、アンダーライン（<code>_</code>）です。</p>
  </div>

  <div class="form-group">
    <label class="checkbox-inline">
      <%= f.check_box(:logging_enabled) %>
      ログを記録する
    </label>
  </div>

  <div class="form-group">
    <%= f.submit(t('views.save'), class: 'btn btn-primary') %>
  </div>
<% end %>
