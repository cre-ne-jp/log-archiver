<%= form_for(@archive_reason, url: path) do |f| %>
  <div class="form-group">
    <%= f.label(:reason) %>
    <%= f.text_field(:reason, class: 'form-control', required: true) %>
    <p class="help-block">非表示理由を入力してください。</p>
  </div>

  <div class="form-group">
    <%= f.submit(t('views.save'), class: 'btn btn-success') %>
  </div>
<% end %>
