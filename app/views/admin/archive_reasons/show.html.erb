<% title(['発言の非表示理由', '詳細']) %>
<div class="container main-container">
  <div class="row">
    <%= render('shared/admin/nav_archive_reasons') %>

    <div class="col-xs-12 col-sm-9">
      <div class="main-panel">
        <div class="panel-body">
          <%= render('shared/flash') %>

          <ol class="breadcrumb">
            <li><%= link_to('管理', admin_path) %></li>
            <li><%= link_to('発言の非表示理由', admin_archive_reasons_path) %></li>
            <li class="active">詳細</li>
          </ol>

          <div class="page-header">
            <h1>発言の非表示理由 詳細</h1>
          </div>

          <table class="table table-striped channel-info">
            <tbody>
              <tr>
              <th scope="row" class="archive-reason-body">理由</th>
                <td class="archive-reason-body"><%= @archive_reason.reason %></td>
              </tr>
              <tr>
                <th scope="row" class="archive-reason-count">該当メッセージ数</th>
                <td class="archive-reason-count"><%= @archive_reason.archived_conversation_messages.count %></td>
              </tr>
            </tbody>
          </table>

          <p>
          <%= link_to('編集', edit_admin_archive_reason_path(@archive_reason), class: 'btn btn-success') %>
          <%= link_to('一覧に戻る', admin_archive_reasons_path, class: 'btn btn-default') %>
          </p>

          <h2>該当メッセージ</h2>
          <%= render('shared/message_list', messages: @messages, show_channel: true, style: :normal) %>
          <%= paginate(@messages, outer_window: 2) %>
        </div>
      </div>
    </div>
  </div>
</div>
