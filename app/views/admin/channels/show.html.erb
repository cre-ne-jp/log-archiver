<% title('チャンネル情報') %>
<%= render('shared/navbar') %>
<div class="container main-container">
  <%= render('shared/flash') %>

  <div class="row">
    <%= render('shared/admin/nav_channels') %>

    <div class="col-xs-12 col-sm-9">
      <ol class="breadcrumb">
        <li><%= link_to('管理', admin_path) %></li>
        <li><%= link_to('チャンネル', admin_channels_path) %></li>
        <li class="active"><%= @channel.name_with_prefix %></li>
      </ol>

      <div class="page-header">
        <h1>チャンネル情報</h1>
      </div>

      <table class="table table-striped channel-info">
        <tbody>
          <tr>
            <th scope="row"><%= t('activerecord.attributes.channel.name') %></th>
            <td><%= @channel.name_with_prefix %></td>
          </tr>
          <tr>
            <th scope="row"><%= t('activerecord.attributes.channel.identifier') %></th>
            <td><%= @channel.identifier %></td>
          </tr>
          <tr>
            <th scope="row"><%= t('activerecord.attributes.channel.logging_enabled') %></th>
            <td class="channel-logging-enabled"><%= @channel.logging_enabled? ? fa_icon('check') : '' %></td>
          </tr>
        </tbody>
      </table>

      <p><%= link_to('編集', edit_channel_path(@channel), class: 'btn btn-primary') %></p>
    </div>
  </div>
</div>
