<% title(['非表示の発言', '編集']) %>
<div class="container main-container">
  <div class="row">
    <%= render('shared/admin/navigation') %>

    <div class="col-xs-12 col-sm-9">
      <div class="main-panel">
        <div class="panel-body">
          <%= render('shared/flash') %>

          <ol class="breadcrumb">
            <li><%= link_to('管理', admin_path) %></li>
            <li><%= link_to('非表示の発言', admin_archived_conversation_messages_path) %></li>
            <li><%= link_to(@archived_conversation_message.id, admin_archived_conversation_message_path(@archived_conversation_message)) %></li>
            <li class="active">編集</li>
          </ol>

          <div class="page-header">
            <h1>発言の詳細</h1>
          </div>

          <%= render('shared/admin/message_detail', m: @archived_conversation_message) %>

          <%= render('shared/error_messages', target: @archived_conversation_message) %>

          <h2>非表示理由の設定</h2>
          <%= render('form', path: admin_archived_conversation_message_path) %>
        </div>
      </div>
    </div>
  </div>
</div>
