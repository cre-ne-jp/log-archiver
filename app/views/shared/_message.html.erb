<% anchor = m.fragment_id %>
<% browse_day = ChannelBrowse::Day.new(channel: m.channel, date: m.timestamp.to_date, style: style) %>
<tr id="<%= anchor %>" class="message message-type-<%= m.type.downcase %><%= ' message-archived' if m.kind_of?(ArchivedConversationMessage) %>" data-message-filter-target="message <%= m.stimulus_target %>">
  <td class="message-time"><%= link_to(m.timestamp.strftime('%T'), browse_day.path(anchor: anchor)) %></td>
  <% if show_channel %>
    <td class="message-channel"><%= link_to(m.channel.name_with_prefix, m.channel) %></td>
  <% end %>
  <td class="message-content">
    <% case m %>
    <% when Join %>
      <b class="nickname"><%= m.nick %></b><%= m.irc_user ? " (#{m.irc_user.user_host})" : '' %> が <b class="channel"><%= m.channel.name_with_prefix %></b> に参加しました。
    <% when Part %>
      <b class="nickname"><%= m.nick %></b> が <b class="channel"><%= m.channel.name_with_prefix %></b> から退出しました<%= message_or_period(m) %>
    <% when Quit %>
      <b class="nickname"><%= m.nick %></b> が切断されました<%= message_or_period(m) %>
    <% when Nick %>
      <b class="nickname old-nickname"><%= m.nick %></b> &rarr; <b class="nickname new-nickname"><%= m.new_nick %></b>
    <% when Kick %>
      <b class="nickname kick-by"><%= m.nick %></b> が <b class="channel"><%= m.channel.name_with_prefix %></b> から <b class="nickname kick-target"><%= m.target %></b> を退出させました<%= message_or_period(m) %>
    <% when Topic %>
      <b class="nickname"><%= m.nick %></b> が <b class="channel"><%= m.channel.name_with_prefix %></b> のトピックを設定しました：<%= raw(linkify(m.message)) %>
    <% when Privmsg, MessageHelper::IsArchived[:privmsg] %>
      <dl class="message">
        <dt><b class="nickname message-privmsg"><%= m.nick %></b></dt>
        <% if keyword = privmsg_id_keyword_map[m.id] %>
          <dd><%= linkify_keyword(m, keyword) %></dd>
        <% else %>
          <dd><%= raw(linkify(m.message)) %></dd>
        <% end %>
      </dl>
    <% when Notice, MessageHelper::IsArchived[:notice] %>
      <dl class="message">
        <dt><b class="nickname"><%= m.nick %></b></dt>
        <dd><%= raw(linkify(m.message)) %></dd>
      </dl>
    <% end %>
  </td>
  <% if current_user %>
    <td class="message-detail">
      <% if MessageHelper::PossibleArchiveTypes.include?(m.type) %>
        <% if m.kind_of?(ArchivedConversationMessage) %>
          <%= link_to(fa_icon('info-circle', title: '詳細'), admin_archived_conversation_message_path(m.id)) %>
        <% else %>
          <%= link_to(fa_icon('info-circle', title: '詳細'), admin_conversation_message_path(m.id)) %>
        <% end %>
      <% end %>
    </td>
  <% end %>
</tr>
