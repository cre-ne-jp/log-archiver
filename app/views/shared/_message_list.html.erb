<table class="table table-striped message-list">
  <thead>
    <tr>
      <th class="message-time">時刻</th>
      <% if show_channel %>
        <th class="message-channel">チャンネル</th>
      <% end %>
      <th>メッセージ</th>
      <% if current_user %>
        <th class="message-detail"></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <%= render(partial: 'shared/message', collection: messages, as: :m, locals: { show_channel: show_channel, style: style }) %>
  </tbody>
</table>
